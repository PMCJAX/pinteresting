<h1>Listing plans</h1>
      
                <% @plans.each do |plan| %>
                  <% if plan.user == current_user %>
                    
                    <div class="panel panel-default">

                      <div class="panel-heading">
                        <h4>Plan Creator</h4>
                          <sup><%= plan.name %></sup>
                        </p>
                      </div>
                    
                      <div class="panel-body">
                        <%= plan.user.email if plan.user %>
                        <%= plan.company %>
                        <%= plan.address %>
                        <%= plan.phone %>
                        <%= plan.fax %>
                        <%= plan.tollfree %>
                        <%= plan.goals %>
                        <%= plan.primary %>
                        <%= plan.secondary %>
                        <%= plan.demographic %>
                        <%= plan.competitors %>
                        <%= plan.emails %>
                        <%= plan.notes %>
                        <%= link_to 'Show', plan %>
                        <%= link_to 'Edit', edit_plan_path(plan) %>
                        <%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %>
                      </div>
                    </div>

                    <% end %>
                <% end %>
              
            



<br>

<% if user_signed_in? %>
  <%= link_to 'New Plan', new_plan_path %>
<% end %>
