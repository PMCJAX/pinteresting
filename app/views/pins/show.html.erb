

<div class="row">
	<div class="col-md-offset-1 col-md-8">
		<div class="actions">
					<p><%= link_to 'Back', pins_path %>
					<% if @pin.user == current_user %>
					<%= link_to 'Edit', edit_pin_path(@pin) %></p>
				</div>
		<div class="panel panel-default">
			<div class="panel-heading center pinshow">
				
				<% end %>
				<p><%= image_tag @pin.image.url %></p>
			</div>

			<div class="panel-body">
				<p><%= @pin.description %></p>
				<p class="user"><%= @pin.user.email if @pin.user %></p>

			</div>

				
		</div>
	</div>
</div>

